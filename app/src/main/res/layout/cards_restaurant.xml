<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="5dp">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        android:id="@+id/cvRestaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivRest"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/image1"/>

            <TextView
                android:id="@+id/tvNameRest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:text="Tony Roma's"
                android:textColor="@color/black"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/tvEndRest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="Av. Lavandisca, 717 - Indianópolis, São Paulo"
                android:textColor="@color/grey"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvHoraRest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="Fecha às 22:00"
                android:textColor="@color/grey"
                android:textSize="13sp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>